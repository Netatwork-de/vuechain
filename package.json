{
	"name": "vuechain",
	"version": "1.0.0-beta.5",
	"description": "Full stack build chain for large scale vue projects with typescript, sass and i18n support",
	"main": "./runtime/index.js",
	"types": "./runtime/index.d.ts",
	"bin": "./tooling/cli.js",
	"scripts": {
		"compile:runtime": "tsc -p tsconfig-runtime.json",
		"compile:runtime:watch": "tsc -p tsconfig-runtime.json -w",
		"compile:tooling": "tsc -p tsconfig-tooling.json",
		"compile:tooling:watch": "tsc -p tsconfig-tooling.json -w",
		"compile": "concurrently npm:compile:runtime npm:compile:tooling",
		"compile:watch": "concurrently npm:compile:runtime:watch npm:compile:tooling:watch",
		"clean": "rimraf ./runtime/**/* ./tooling/**/*",
		"prepack": "npm run clean && npm run compile",
		"test:e2e": "rimraf ./test/e2e/dist && tsc -p tsconfig-test-e2e.json && node test/e2e/dist",
		"test:run": "rimraf ./test/dist && tsc -p tsconfig-test.json && ava --verbose",
		"test:watch": "rimraf ./test/dist && tsc -p tsconfig-test.json && concurrently \"tsc -p tsconfig-test.json -w\" \"ava --verbose --watch\"",
		"test": "npm run test:run"
	},
	"dependencies": {
		"@phylum/command": "^1.2.0",
		"@vue/component-compiler-utils": "^3.0.0",
		"ansi-colors": "^4.1.1",
		"chokidar": "^3.2.1",
		"css-loader": "^3.2.0",
		"fs-extra": "^8.1.0",
		"gulp-sass": "^4.0.2",
		"gulp-sourcemaps": "^2.6.5",
		"gulp-typescript": "^5.0.1",
		"hash-sum": "^2.0.0",
		"html-webpack-plugin": "^3.2.0",
		"merge-stream": "^2.0.0",
		"mini-css-extract-plugin": "^0.8.0",
		"parse5": "^5.1.0",
		"read": "^1.0.7",
		"sass": "^1.23.0",
		"sass-loader": "^8.0.0",
		"ts-loader": "^6.2.0",
		"typescript": "^3.6.4",
		"v8-compile-cache": "^2.1.0",
		"vinyl": "^2.2.0",
		"vinyl-fs": "^3.0.3",
		"vue": "^2.6.10",
		"vue-i18n": "^8.15.0",
		"vue-loader": "^15.7.1",
		"vue-style-loader": "^4.1.2",
		"vue-template-compiler": "^2.6.10",
		"webpack": "^4.41.0",
		"webpack-dev-server": "^3.8.2"
	},
	"devDependencies": {
		"@types/body-parser": "^1.17.1",
		"@types/express": "^4.17.1",
		"@types/fs-extra": "^8.0.0",
		"@types/gulp-sass": "^4.0.0",
		"@types/gulp-sourcemaps": "0.0.32",
		"@types/hash-sum": "^1.0.0",
		"@types/merge-stream": "^1.1.2",
		"@types/mini-css-extract-plugin": "^0.8.0",
		"@types/node": "^10.14.21",
		"@types/parse5": "^5.0.2",
		"@types/puppeteer": "^1.20.2",
		"@types/read": "0.0.28",
		"@types/sass": "^1.16.0",
		"@types/vinyl-fs": "^2.4.11",
		"@types/webpack": "^4.39.3",
		"ava": "^2.4.0",
		"body-parser": "^1.19.0",
		"concurrently": "^5.0.0",
		"express": "^4.17.1",
		"glob": "^7.1.4",
		"puppeteer": "^1.20.0",
		"rimraf": "^3.0.0",
		"verdaccio": "^4.3.3",
		"verdaccio-memory": "^8.1.2"
	},
	"ava": {
		"files": [
			"./test/dist/test/*.js"
		]
	},
	"repository": "github:Netatwork-de/vuechain",
	"homepage": "https://github.com/Netatwork-de/vuechain",
	"author": "Net at Work GmbH",
	"license": "Apache-2.0"
}
